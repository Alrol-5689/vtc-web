<?xml version="1.0" encoding="UTF-8"?>
<!--
    Este archivo persistence.xml es necesario para configurar JPA (Java Persistence API)
    y Hibernate como proveedor de persistencia en tu aplicaci칩n.
-->
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="vtc-autogestion" transaction-type="RESOURCE_LOCAL">
        <class>com.vtc.modelo.Administrator</class>
        <class>com.vtc.modelo.AnejoContrato</class>
        <class>com.vtc.modelo.AnexoConvenio</class>
        <class>com.vtc.modelo.Contrato</class>
        <class>com.vtc.modelo.Convenio</class>
        <class>com.vtc.modelo.Driver</class>
        <class>com.vtc.modelo.DriverDay</class>
        <class>com.vtc.modelo.Nomina</class>
        <class>com.vtc.modelo.PlusConvenio</class>
        <class>com.vtc.modelo.PoliticaComision</class>
        <class>com.vtc.modelo.PoliticaGratificacion</class>
        <!-- A침ade aqu칤 m치s clases si las haces @Entity -->

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/vtc-autogestion"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>

            <!-- Hibernate -->
            <!-- <property name="hibernate.hbm2ddl.auto" value="update"/> -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- 游뚿 A침adido para regenerar autom치ticamente el esquema. Quitar: value="none". Poner: value="drop-and-create"-->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/> 

        </properties>
    </persistence-unit>
</persistence>